{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": "src",
    "paths": {
      "types/*": ["types/*"],
      "api/*": ["api/*"],
      "hooks/*": ["hooks/*"],
      "components/*": ["components/*"]
    }
  }
}